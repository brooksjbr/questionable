<p id="notice"><%= notice %></p>

<p>
  <strong>Title</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content</strong>
  <%= @question.content %>
</p>
<%= link_to 'Reply', new_question_answer_path(@question)%> |
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<% @question.answers.each do |answer| %>
	<p><%= link_to answer.content, question_answer_path(:question_id => @question.unique_id, :id => answer.unique_id) %></p>
<% end %>
